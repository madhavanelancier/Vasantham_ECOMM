            android:name="com.elanciers.vasantham_stores_ecomm.Splashscreen"
            android:theme="@style/NoAction">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.elanciers.vasantham_stores_ecomm.Termsconditions"
            android:screenOrientation="portrait"/>
        <activity android:name="com.elanciers.vasantham_stores_ecomm.Signin_Due_Activity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.elanciers.vasantham_stores_ecomm.Dashboard"
            android:screenOrientation="portrait"/>
