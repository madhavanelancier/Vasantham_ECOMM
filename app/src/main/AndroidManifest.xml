            android:screenOrientation="portrait"/>
        <activity android:name="com.elanciers.vasantham_stores_ecomm.MainSearchActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.elanciers.vasantham_stores_ecomm.ContactUsActivity"
            android:screenOrientation="portrait"/>
