            android:screenOrientation="portrait"/>
        <activity android:name="com.elanciers.vasantham_stores_ecomm.OffersActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.elanciers.vasantham_stores_ecomm.MapTrackingActivity"
            android:screenOrientation="portrait"/>

        <service
            android:name="com.elanciers.vasantham_stores_ecomm.RouteService"
            android:enabled="true"
            android:exported="false" />

