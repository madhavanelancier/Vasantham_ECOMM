        <activity android:name="com.elanciers.vasantham_stores_ecomm.AddressMapActivity"
            android:screenOrientation="portrait"
         android:windowSoftInputMode="adjustResize"/>

        <activity android:name="com.elanciers.vasantham_stores_ecomm.OrderDetailActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.elanciers.vasantham_stores_ecomm.OrderActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.elanciers.vasantham_stores_ecomm.ProductActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.elanciers.vasantham_stores_ecomm.StoresActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.elanciers.vasantham_stores_ecomm.CartActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.elanciers.vasantham_stores_ecomm.ProfileActivity"
