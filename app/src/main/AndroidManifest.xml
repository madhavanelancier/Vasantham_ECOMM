        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/NoAction"
        android:usesCleartextTraffic="true"
        tools:overrideLibrary="com.facebook.shimmer">
        <activity android:name="com.elanciers.vasantham_stores_ecomm.Myrewards_point"
            android:screenOrientation="portrait"></activity>
        <activity android:name="com.elanciers.vasantham_stores_ecomm.Referral_Activity"
