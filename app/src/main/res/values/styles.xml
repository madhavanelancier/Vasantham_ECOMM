<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->

    <!-- NoAction -->
    <style name="NoAction" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
        <item name="android:editTextStyle">@style/MyEdittextStyle</item>
    </style>

    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">#1a1a1a</item>
        <!--<item name="android:textStyle">bold</item>-->
        <item name="android:fontFamily" tools:ignore="NewApi">@font/brandon_text_reg_otf</item>
    </style>

    <style name="MyEdittextStyle" parent="android:Widget.EditText">
        <item name="android:textColor">#1a1a1a</item>
        <!--<item name="android:textStyle">bold</item>-->
        <item name="android:fontFamily" tools:ignore="NewApi">@font/brandon_text_reg_otf</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@font/brandon_text_med_otf</item>
    </style>

    <style name="SubtitleCollapsingToolbar"
        parent="@style/Widget.Design.CollapsingToolbar">
    </style>
    <style name="CollapsedSubtitleAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">13sp</item>
    </style>
    <style name="ExpandedSubtitleAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
    </style>

</resources>
