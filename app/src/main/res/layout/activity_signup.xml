<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.1"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/crackers" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:alpha="0.7"
        android:gravity="end"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:adjustViewBounds="true"
            android:alpha="0.3"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/logo" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/commondp"
                android:paddingTop="60dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/logo" />

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:padding="16dp"
                    app:tint="@color/white"
                    android:src="@drawable/ic_left_arrow" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/commondp"
                android:paddingRight="@dimen/commondp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/brandon_text_med_otf"
                    android:text="Welcome"
                    android:textSize="30sp"
                    app:fontFamily="@font/brandon_text_med_otf" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/brandon_text_med_otf"
                    android:text="Sign Up to Continue"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/brandon_text_med_otf" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/brandon_text_reg_otf"
                            android:text="Name"
                            android:textSize="16sp"
                            app:fontFamily="@font/brandon_text_reg_otf" />

                        <EditText
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/editext_back"
                            android:ems="10"
                            android:fontFamily="@font/brandon_text_reg_otf"
                            android:inputType="textPersonName"
                            android:padding="12dp"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:fontFamily="@font/brandon_text_reg_otf" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/brandon_text_reg_otf"
                            android:text="Mobile No"
                            android:textSize="16sp"
                            app:fontFamily="@font/brandon_text_reg_otf" />

                        <EditText
                            android:id="@+id/mobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/editext_back"
                            android:digits="1234567890"
                            android:ems="10"
                            android:fontFamily="@font/brandon_text_reg_otf"
                            android:inputType="number"
                            android:maxLength="10"
                            android:padding="12dp"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:fontFamily="@font/brandon_text_reg_otf" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/brandon_text_reg_otf"
                            android:text="Email"
                            android:textSize="16sp"
                            app:fontFamily="@font/brandon_text_reg_otf" />

                        <EditText
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/editext_back"
                            android:ems="10"
                            android:fontFamily="@font/brandon_text_reg_otf"
                            android:inputType="textEmailAddress"
                            android:padding="12dp"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:fontFamily="@font/brandon_text_reg_otf" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/brandon_text_reg_otf"
                            android:text="Referral Mobile Number"
                            android:textSize="16sp"
                            app:fontFamily="@font/brandon_text_reg_otf" />

                        <EditText
                            android:id="@+id/referal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/editext_back"
                            android:ems="10"
                            android:fontFamily="@font/brandon_text_reg_otf"
                            android:inputType="number"
                            android:digits="1234567890"
                            android:maxLength="10"
                            android:padding="12dp"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:fontFamily="@font/brandon_text_reg_otf" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:id="@+id/linname"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/brandon_text_reg_otf"
                            android:text="Referral Name"
                            android:textColor="@color/colorAccent"
                            android:textSize="16sp"
                            app:fontFamily="@font/brandon_text_reg_otf" />

                        <EditText
                            android:id="@+id/referalnm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/editext_back"
                            android:editable="false"
                            android:ems="10"
                            android:focusable="false"
                            android:fontFamily="@font/brandon_text_reg_otf"
                            android:inputType="textPersonName"
                            android:maxLength="10"
                            android:padding="12dp"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:fontFamily="@font/brandon_text_reg_otf" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:clickable="false"
                            android:enabled="true"
                            android:fontFamily="@font/brandon_text_reg_otf"
                            android:longClickable="false"
                            android:paddingStart="20dp"
                            android:text="I accept all terms and conditions"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            app:fontFamily="@font/brandon_text_reg_otf" />


                    </LinearLayout>

                    <Button
                        android:id="@+id/signupbtn"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/background_whiteborder"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="sign up"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>



</FrameLayout>